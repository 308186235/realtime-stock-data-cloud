# 环境变量配置模板
# 复制此文件并命名为 .env，然后根据实际环境配置相应的值

# 应用基础配置
APP_NAME=炒股养家
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000

# 数据库配置
DATABASE_URL=sqlite:///./stock_trading.db

# API配置
TUSHARE_TOKEN=your_tushare_token

# AI服务配置
USE_MOCK_DATA=true  # 开发环境设为true，生产环境设为false
MODEL_PATH=ai/models

# 东吴证券同花顺设置
THS_PATH=C:/同花顺
DONGWU_ACCOUNT_ID=your_dongwu_account_id
DONGWU_ACCOUNT_PWD=your_dongwu_account_password
DONGWU_DEFAULT_BROKER=THS_DONGWU

# 日志设置
LOG_LEVEL=info  # debug, info, warning, error, critical
LOG_FILE=logs/app.log

# 其他第三方API配置
ZHINANZHEN_API_URL=
ZHINANZHEN_API_KEY= 